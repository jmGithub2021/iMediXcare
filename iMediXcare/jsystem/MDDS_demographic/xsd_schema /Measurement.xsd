<?xml version = "1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
<xs:element name= "Measurement">
<!-- Reference value for its Metadata (G00.04)-->
<xs:simpleType>
<xs:restriction base= "xs:decimal">

<!-- The maximum size has been taken as per Land Records application, for other it can be customized / standardized by domain applications as per their specific requirements. -->
<xs:totalDigits value="19"/>
<xs:fractionDigits value="3"/>	
<xs:pattern value="[0-9]{1,15}[\.][0-9]{3}"/>

</xs:restriction>
</xs:simpleType>
</xs:element>
</xs:schema>


